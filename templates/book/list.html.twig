{% extends 'base.html.twig' %}

{% block title %}Books from Source of Truth{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">

    <ul>
        {% for book in books %}
            <li> <a href="{{ path('book-name', {author: book.author, title: book.title})  }}"> {{ book.title }} </a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
